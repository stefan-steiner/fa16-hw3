<h1>Student Portal</h1>
<form action="/students" method="POST">
  <label>Name</label>
  <input name="name" placeholder=<%= @placeholder_name %> type="text"></input>
  <label>SID</label>
  <input
    name="student_id"
    placeholder=<%= @placeholder_SID %>
    type="text"
  >
  </input>
  <label>Major</label>
  <input name="major" placeholder=<%= @placeholder_major %> type="text"></input>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <button type="submit">Enter</button>
</form>